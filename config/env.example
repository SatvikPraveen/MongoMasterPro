# Location: `/config/env.example`
# MongoMasterPro Environment Configuration Template
# Copy this file to .env and customize for your environment

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================

# MongoDB Version
MONGO_VERSION=7.0

# MongoDB Authentication
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=mongomaster123
MONGO_INITDB_DATABASE=learning_platform

# Application Database User
MONGO_APP_USERNAME=app_user
MONGO_APP_PASSWORD=app_secure_pass
MONGO_APP_DATABASE=learning_platform

# MongoDB Connection
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_AUTH_SOURCE=admin

# MongoDB Connection String (Single Instance)
MONGO_URI= [Add details]

# MongoDB Connection String (Replica Set)
MONGO_RS_URI= [Add details]
# =============================================================================
# REPLICA SET CONFIGURATION
# =============================================================================

# Replica Set Name
REPLICA_SET_NAME=rs0

# Replica Set Members
RS_PRIMARY_HOST=mongo-rs-primary
RS_PRIMARY_PORT=27017
RS_SECONDARY1_HOST=mongo-rs-secondary1
RS_SECONDARY1_PORT=27017
RS_SECONDARY2_HOST=mongo-rs-secondary2
RS_SECONDARY2_PORT=27017

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Container Names
MONGO_CONTAINER_NAME=mongo-primary
MONGO_RS_PRIMARY_CONTAINER=mongo-rs-primary
MONGO_RS_SECONDARY1_CONTAINER=mongo-rs-secondary1
MONGO_RS_SECONDARY2_CONTAINER=mongo-rs-secondary2

# Docker Network
DOCKER_NETWORK=mongo-network

# Volume Names
MONGO_DATA_VOLUME=mongo-data
MONGO_CONFIG_VOLUME=mongo-config
MONGO_LOG_VOLUME=mongo-log

# =============================================================================
# DATA GENERATION CONFIGURATION
# =============================================================================

# Data Generation Mode (lite|full)
DATA_MODE=lite

# Data Volume Settings
LITE_USER_COUNT=1000
LITE_COURSE_COUNT=100
LITE_ENROLLMENT_COUNT=5000

FULL_USER_COUNT=10000
FULL_COURSE_COUNT=1000
FULL_ENROLLMENT_COUNT=50000

# Data File Paths
DATA_SEED_PATH=./data/seed
DATA_GENERATED_PATH=./data/generated

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Learning Platform Settings
APP_NAME=MongoMasterPro
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_TIMEOUT=3600

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Connection Pool Settings
MAX_POOL_SIZE=100
MIN_POOL_SIZE=5
MAX_IDLE_TIME=30000
CONNECT_TIMEOUT=10000
SOCKET_TIMEOUT=5000

# Query Performance
SLOW_QUERY_THRESHOLD=100
PROFILER_LEVEL=1

# Memory Settings
CACHE_SIZE_GB=1
JOURNAL_COMMIT_INTERVAL=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=./config/certs/mongodb.pem
SSL_KEY_PATH=./config/certs/mongodb-key.pem
SSL_CA_PATH=./config/certs/ca.pem

# Authentication Settings
AUTH_MECHANISM=SCRAM-SHA-256
AUTH_ENABLED=true

# Authorization Settings
RBAC_ENABLED=true
FIELD_LEVEL_SECURITY=false

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Log Configuration
LOG_LEVEL=info
LOG_PATH=./logs
LOG_ROTATION=daily
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=7

# Monitoring
PROFILER_ENABLED=true
METRICS_COLLECTION=true
SLOW_OP_THRESHOLD=100

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_DATABASE=learning_platform_test
TEST_DATA_SIZE=100

# Performance Testing
BENCHMARK_DURATION=60
BENCHMARK_CONNECTIONS=10
BENCHMARK_OPERATIONS=1000

# Validation Settings
VALIDATION_ENABLED=true
STRICT_VALIDATION=false

# =============================================================================
# PORTFOLIO AND REPORTING
# =============================================================================

# Output Directories
RESULTS_PATH=./docs/results
PORTFOLIO_PATH=./docs/portfolio
REPORTS_PATH=./docs/reports

# Export Formats
EXPORT_FORMAT=json,csv,html
CHART_GENERATION=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# Development Tools
AUTO_RESTART=true
HOT_RELOAD=false

# Git Configuration (for portfolio)
GIT_AUTHOR=MongoMasterPro
GIT_EMAIL=mongomaster@example.com

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and modify for production deployment

# Production MongoDB
# MONGO_URI= [Add Details]
# MONGO_RS_URI= [Add Details]

# Production Security
# SSL_ENABLED=true
# AUTH_MECHANISM=MONGODB-X509
# FIELD_LEVEL_SECURITY=true

# Production Performance
# MAX_POOL_SIZE=200
# CACHE_SIZE_GB=4
# PROFILER_LEVEL=0

# Production Monitoring
# LOG_LEVEL=warn
# METRICS_ENDPOINT=https://monitoring.example.com/metrics

# =============================================================================
# CUSTOM CONFIGURATIONS
# =============================================================================
# Add your custom environment variables below

# Custom application settings
# CUSTOM_FEATURE_FLAG=true
# CUSTOM_API_KEY=your-api-key
# CUSTOM_WEBHOOK_URL=https://your-webhook.com/mongodb-events
